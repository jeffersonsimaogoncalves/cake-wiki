{
    "name": "scherersoftware/cake-wiki",
    "description": "Simple Wiki for CakePHP apps",
    "license": "MIT",
    "type": "cakephp-plugin",
    "require": {
        "php": ">=5.6.0",
        "cakephp/cakephp": "~3.0",
        "codekanzlei/cake-cktools": "*",
        "codekanzlei/cake-frontend-bridge": "*",
        "codekanzlei/cake-attachments": "*",
        "codekanzlei/cake-model-history": "*",
        "michelf/php-markdown": "^1.5",
        "cakephp/migrations": "~1.0",
        "codekanzlei/cake-cktools": "^1.2",
        "codekanzlei/cake-list-filter": "1.*"
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Scherersoftware\\Wiki\\": "src"
        }
    },
    "scripts": {
        "cs-check": "vendor/bin/phpcs --colors -p --standard=vendor/cakephp/cakephp-codesniffer/CakePHP ./src"
    }
}
